{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "lib_es6"
  },
  "filesGlob": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/**/*.d.ts"
  ],
  "exclude": [
    "storybook-ts",
    "docs", "docs_src",
    "docs_ts_processed",
    "node_modules",
    "!node_modules/rxjs",
    "reactive-konva",
    "reactive-konva.d.ts",
    "tools",
    "lib",
    "lib_es6",
    "examples",
    "src_old",
    "webpack",
    "types"
  ],
  "compileOnSave": false,
  "typescript.tsdk": "./node_modules/typescript/lib"
}